{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "rootDir": "./src",
    "module": "esnext", // Use ESNext for ESM
    "target": "es6",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
